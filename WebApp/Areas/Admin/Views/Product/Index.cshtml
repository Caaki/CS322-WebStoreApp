@model List<Product>

@functions{
    public string normalizeString(string s){
        if (s.Length > 17)
        {
            return s.Substring(0, 17) + "...";
        }
        else
        {
            return s;
        }
    }
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-primary">
                    Product List
                </h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4 shadow-sm">


        <div class="row pt-4 pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" class="btn btn-primary shadow">
                    <i class="bi bi-plus-circle"></i> Create New Product
                </a>
            </div>
        </div>

        <table id="tblData" class="table table-bordered table-striped shadow" style="width:100%">
            <thead>
                <tr>
                    <th class="col-2">Title</th>
                    <th class="col-2">Author</th>
                    <th class="col-2">Category</th>
                    <th class="col-2">Pricing</th>
                    <th class="col-2 text-center">Options</th>
                </tr>
            </thead>
        </table>




    </div>

</div>

@section Scripts{
    <script src="~/js/product.js"></script>
}

