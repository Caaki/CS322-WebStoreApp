@model List<Category>
@if (TempData["success"] != null)
{
    switch (TempData["success"]){
        
        case string successMessage when successMessage.Contains("updated"):
            <h2 class="text-info">@TempData["success"]</h2>
            break;
        case string successMessage when successMessage.Contains("deleted"):
            <h2 class="text-danger">@TempData["success"]</h2>
            break;
        case string successMessage when successMessage.Contains("created"):
            <h2 class="text-success">@TempData["success"]</h2>
            break;
    }
}
<div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-primary">Category List</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Category" asp-action="Create" class="btn btn-primary" >
                   <i class="bi bi-plus-circle"></i> Create New Category
                </a>
            </div>
        </div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th class="col-5">Category name</th>
        <th class="col-5">Display Order</th>
        <th class="col-2 text-center">Options</th>
    </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model.OrderBy(u=>u.DisplayOrder)){
        <tr >
            <td class="pt-4">@obj.Name</td>

            <td class="pt-4">@obj.DisplayOrder</td>
            

            <td class="text-center pt-3 pb-0">
            <div class="btn-group text-center" role="group">
                <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id"
                class="btn btn-primary rounded-5 pr-1 pl-1 pt-2 pb-1" style="margin-right:10px">
                    <i class="bi bi-pencil-square"></i>
                </a>
                <form method="post">
                    <button asp-controller="Category" type="submit" asp-action="Delete" asp-route-id="@obj.Id"
                        class="btn btn-outline-danger rounded-5 pr-1 pl-1 pt-2 pb-1"
                        onclick="return confirm('Are you sure you want to delete this item?');">
                    <i class="bi bi-trash"></i>
                </button>
                </form>

            </div>

        </td>
        </tr>
        }
    </tbody>
</table>

</div>

